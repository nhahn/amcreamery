<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email, "Email Address" %><br />
    <%= f.text_field :email %>
  </p>
  <% if session[:user_id].nil? || !@user.new_record? %>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <% end %>
  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update"), :class => 'btn btn-info' %></p>
<% end %>
