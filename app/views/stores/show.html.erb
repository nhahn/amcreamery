<div class="row">
  <div class="span8">
    <%= render :partial => "store_details" %>
  </div>
  <div class="span4">
    <%= render :partial => "upcomming_shifts" %>
  </div>
</div>
  <%# if current_user.role == "owner" %>
    <div class="form-actions">
      <%= link_to raw("<i class='icon-th-list'></i> Display All Stores"), stores_path, :class => 'btn'  %>&nbsp;&nbsp;
      <%= link_to raw("<i class='icon-pencil'></i> Edit This Store"), edit_store_path(@store), :class => 'btn' %>&nbsp;&nbsp;
      <%= link_to raw("<i class='icon-trash icon-white'></i> Deactivate Store"), store_path(@store), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %> 
    </div>
  <%#end %>
</div>
