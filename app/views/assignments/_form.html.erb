<%= simple_form_for @assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Assignment</legend>

    <%= f.association :store, :collection => Store.alphabetical.active.all%>

    <%= f.association :employee, :collection => Employee.alphabetical.active.all%>

    <%= f.input :start_date, :as => :string, :input_html => {:class => "datepicker"} %>

    <%= f.input :end_date, :as => :string, :input_html => {:class => "datepicker"} %>

    <%= f.input :pay_level, :collection => (1..6) %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', assignments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
