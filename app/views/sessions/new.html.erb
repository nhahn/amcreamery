<% title "Log in" %>

<p>Are you a current employee without an account?<br>
   <%= link_to "Sign Up", signup_path %></p>
<br/><p>Did you forget your password?<br/>
  <%= link_to "Reset Password", temp_password_sessions_path %>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email, "Email Address" %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in", :class => 'btn btn-info'%></p>
<% end %>
