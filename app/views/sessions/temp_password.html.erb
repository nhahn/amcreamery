<% title "Forgot Password" %>

<p>Are you a current employee without an account?<br>
   <%= link_to "Sign Up", signup_path %></p>

<%= form_tag forgot_password_sessions_path do %>
  <p>
    <%= label_tag :email, "Email Address" %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p><%= submit_tag "Send Email", :class => 'btn btn-info'%></p>
<% end %>
